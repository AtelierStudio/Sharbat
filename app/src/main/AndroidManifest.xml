<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.edcan.sharbat">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".activity.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionbar">
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.AppInfoActivity" />
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.PasswordAuthActivity" />
        <activity android:name=".activity.InfoActivity" />
        <activity android:name=".activity.NewCategoryActivity" />
        <activity android:name=".activity.SettingActivity" />
        <activity android:name=".activity.CustomSpamSetActivity" />
        <activity android:name=".activity.MailViewActivity" />
        <activity android:name=".activity.DeveloperActivity" />
        <activity android:name=".activity.SpamMailSettingActivity" />
        <activity android:name=".activity.TutorialActivity"></activity>
    </application>

</manifest>