<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:src="@drawable/text_tutorial4_header" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/acc_tutorial4_device" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C55F91"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_square_20dp_selector"
            android:paddingBottom="9dp"
            android:paddingLeft="60dp"
            android:id="@+id/go_left"
            android:paddingRight="60dp"
            android:paddingTop="9dp"
            android:text="이전으로"
            android:textColor="#FFF"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/go_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_square_20dp_selector"
            android:paddingBottom="9dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:paddingTop="9dp"
            android:text="다음으로"
            android:textColor="#FFF"
            android:textSize="22sp" />
    </LinearLayout>
</LinearLayout>